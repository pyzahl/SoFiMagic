<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/lContactTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TableRow>
                    <TextView
                        android:id="@+id/lblLabID"
                        android:layout_width="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="PrgID:"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tvProgramName"
                        android:text="Camera One"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tvLabNow"
                        android:gravity="center_horizontal"
                        android:text="Time:"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvClock"
                        android:gravity="center_horizontal"
                        android:text="HH:MM:SS"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvVersionDbg"
                        android:gravity="center_horizontal"
                        android:text="V1.0.4"
                        android:textSize="16sp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/lblC1"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:text="CT 1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblC2"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_toRightOf="@+id/editTextTimeC1"
                        android:gravity="center_horizontal"
                        android:text="CT 2"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblC3"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_toRightOf="@+id/editTextTimeC2"
                        android:gravity="center_horizontal"
                        android:text="CT 3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lblC4"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="1dp"
                        android:layout_toRightOf="@+id/editTextTimeC3"
                        android:gravity="center_horizontal"
                        android:text="CT 4"
                        android:textSize="18sp" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/lblTime"
                        android:layout_width="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Time"
                        android:textSize="20sp" />

                    <com.github.pyzahl.sofimagic.HHMMSSEntry
                        android:id="@+id/editTextTimeC1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="@android:color/white"
                        tools:background="#f86d6d"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:layout_gravity="bottom"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:ems="10"
                        android:inputType="time"
                        android:text="12:12:12"
                        android:textSize="20sp"
                        android:clickable="true"/>

                    <com.github.pyzahl.sofimagic.HHMMSSEntry
                        android:id="@+id/editTextTimeC2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="@android:color/white"
                        tools:background="#f86d6d"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:layout_gravity="bottom"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:ems="10"
                        android:inputType="time"
                        android:text="12:12:12"
                        android:textSize="20sp"
                        android:clickable="true"/>

                    <com.github.pyzahl.sofimagic.HHMMSSEntry
                        android:id="@+id/editTextTimeC3"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="@android:color/white"
                        tools:background="#f86d6d"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:layout_gravity="bottom"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:ems="10"
                        android:inputType="time"
                        android:text="12:12:12"
                        android:textSize="20sp"
                        android:clickable="true"/>

                    <com.github.pyzahl.sofimagic.HHMMSSEntry
                        android:id="@+id/editTextTimeC4"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:gravity="bottom|center_horizontal"
                        android:textColor="@android:color/white"
                        tools:background="#f86d6d"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:layout_gravity="bottom"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:ems="10"
                        android:inputType="time"
                        android:text="12:12:12"
                        android:textSize="20sp"
                        android:clickable="true"/>

                </TableRow>
            </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPhaseId"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Phase"
                android:textSize="20sp" />

           <TextView
                android:id="@+id/tvPhaseId"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical"
                android:text="0"
                android:textSize="20sp" />

            <view
                android:id="@+id/sbPhase"
                class="com.github.pyzahl.sofimagic.AdvancedSeekBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tvPhaseId"
                android:layout_toRightOf="@+id/lblPhaseId"
                android:gravity="center_vertical" />

            </RelativeLayout>
        </LinearLayout>


            <TableLayout
                android:id="@+id/lPhase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TableRow android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvPhase"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="bottom|left"
                        android:singleLine="true"
                        android:text="MaxTotality"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFB300"
                        android:textSize="20sp" />


                    <com.github.pyzahl.sofimagic.IndexEntry
                        android:id="@+id/tvStartRef"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="bottom|center_horizontal"
                        android:inputType="time"
                        android:singleLine="true"
                        android:text="CT1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:background="#f86d6d" />

                    <com.github.pyzahl.sofimagic.IndexEntry
                        android:id="@+id/tvStart"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="bottom|center_horizontal"
                        android:inputType="time"
                        android:singleLine="true"
                        android:text="-10s"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:background="#f86d6d" />

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:gravity="bottom|center_horizontal"
                        android:text="to"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <com.github.pyzahl.sofimagic.IndexEntry
                        android:id="@+id/tvEndRef"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="bottom|center_horizontal"
                        android:inputType="time"
                        android:singleLine="true"
                        android:text="CT 2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:background="#f86d6d" />

                    <com.github.pyzahl.sofimagic.IndexEntry
                        android:id="@+id/tvEnd"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:gravity="bottom|center_horizontal"
                        android:inputType="time"
                        android:singleLine="true"
                        android:text="+10s"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:background="#f86d6d" />

                    <com.github.pyzahl.sofimagic.IndexEntry
                        android:id="@+id/tvNumberShots"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:ellipsize="none"
                        android:ems="10"
                        android:inputType="time"
                        android:singleLine="true"
                        android:text="$+99"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:background="#f86d6d" />
                </TableRow>
            </TableLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TableLayout
                        android:id="@+id/tabExposureList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">
                        <TableRow
                            android:id="@+id/rowFlagsList"
                            >
                            <TextView
                                android:id="@+id/tvFlags"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:text="CF"
                                android:textSize="20sp" />
                        </TableRow>
                        <TableRow
                            android:id="@+id/rowBurstCount"
                            >
                            <TextView
                                android:id="@+id/tvBurstCount"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:text="BT"
                                android:textSize="20sp" />
                        </TableRow>
                        <TableRow
                            android:id="@+id/rowISOsList">>
                            <TextView
                                android:id="@+id/tvISOSs"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:text="ISO"
                                android:textSize="20sp" />
                        </TableRow>
                        <TableRow
                            android:id="@+id/rowFList">>
                            <TextView
                                android:id="@+id/tvFs"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical"
                                android:text="F"
                                android:textSize="20sp" />

                        </TableRow>
                        <TableRow
                            android:id="@+id/rowShutterSpeedsList">>
                            <TextView
                                android:id="@+id/tvShutterSpeeds"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="t"
                                android:textSize="20sp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbSilentShutter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:checked="true"
                    android:text="SS" />

                <CheckBox
                    android:id="@+id/cbMF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/cbSilentShutter"
                    android:checked="false"
                    android:text="MF" />

                <CheckBox
                    android:id="@+id/cbDOFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/cbMF"
                    android:checked="false"
                    android:text="DOFF" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">

                <Button
                    android:id="@+id/bnClose"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Quit"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bnStart"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="Start"
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>